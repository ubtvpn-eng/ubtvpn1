---
// src/pages/blog/index.astro
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Получаем все статьи и сортируем по дате (сначала новые)
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Блог - NetFreedom">
	<section class="max-w-4xl mx-auto px-4 py-12">
		<h1 class="text-4xl font-bold mb-12 text-center text-white">База знаний</h1>
		
		<div class="space-y-8">
			{posts.map((post) => (
				<a href={`/blog/${post.slug}/`} class="block bg-slate-800 p-8 rounded-2xl border border-slate-700 hover:border-blue-500 transition group">
					<div class="flex flex-col md:flex-row gap-6 justify-between items-start">
						<div>
							<h2 class="text-2xl font-bold text-white mb-3 group-hover:text-blue-400 transition">
								{post.data.title}
							</h2>
							<p class="text-slate-400 mb-4 line-clamp-2">
								{post.data.description}
							</p>
							<div class="flex gap-4 text-sm text-slate-500">
								<span>{post.data.pubDate.toLocaleDateString('ru-RU')}</span>
								<span>{post.data.tags.join(', ')}</span>
							</div>
						</div>
						<div class="hidden md:block self-center text-slate-600 group-hover:text-white transition">
							→
						</div>
					</div>
				</a>
			))}
		</div>
	</section>
</Layout>
